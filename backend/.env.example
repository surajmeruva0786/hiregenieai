# HireGenie AI - Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Google Gemini AI API
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Database Configuration (Optional - for production)
# MongoDB
MONGODB_URI=mongodb://localhost:27017/hiregenie

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=hiregenie
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Redis (Optional - for caching and queues)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@hiregenie.ai

# Stripe (Optional - for billing)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Zoom Integration (Optional)
ZOOM_CLIENT_ID=your_zoom_client_id_here
ZOOM_CLIENT_SECRET=your_zoom_client_secret_here
ZOOM_REDIRECT_URI=http://localhost:5000/api/zoom/callback

# Logging
LOG_LEVEL=info
